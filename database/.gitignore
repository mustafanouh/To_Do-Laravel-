# ===========================================
# Laravel Git Ignore File
# ===========================================

# OS Files
.DS_Store
Thumbs.db

# Node modules
/node_modules

# Vendor (Composer)
vendor/

# Environment file 
.env
.env.backup
.env.local
.env.production
.env.development

# Laravel specific files
/public/storage
/storage/*.key
/storage/framework/cache/*
/storage/framework/sessions/*
/storage/framework/views/*
/storage/logs/*

# Compiled files
/bootstrap/cache/*.php
.phpunit.result.cache

# Build output (Vite)
public/build
public/hot

# IDE & editor config files
.idea
.vscode
*.sublime-project
*.sublime-workspace

# NPM/Yarn logs
npm-debug.log*
yarn-debug.log*
yarn-error.log*
pnpm-debug.log*

# Misc
*.bak
*.tmp
*.log

# ===========================================
# END
# ===========================================
